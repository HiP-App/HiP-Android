<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rathaus"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_screen_loading"
        android:id="@+id/textView_action"
        android:textSize="22dp"
        android:textIsSelectable="false"
        android:layout_marginTop="40dp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_screen_waiting"
        android:id="@+id/textView_waiting"
        android:textColor="#000000"
        android:autoText="false"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_screen_retry"
        android:id="@+id/button_retry"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:onClick="onclick_retry"
        android:visibility="gone" />

</LinearLayout>